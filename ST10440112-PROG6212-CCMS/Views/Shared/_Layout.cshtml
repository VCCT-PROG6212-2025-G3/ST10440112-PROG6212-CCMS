<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CMCS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ST10440112_PROG6212_CCMS.styles.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <!-- Top Row: White Background with Logo, Title, and User Info -->
        <div class="navbar-top" style="background-color: white; border-bottom: 1px solid #dee2e6; padding: 10px 0;">
            <div class="container-fluid">
                <div class="d-flex justify-content-between align-items-center">
                    <!-- Logo and Title -->
                    <div class="d-flex align-items-center">
                        <img src="~/NLUNI-Logo.png" alt="Newlands University" height="50" class="me-3" />
                        <div>
                            <div style="font-size: 1.2rem; font-weight: bold; line-height: 1.2;">
                                <span style="color: #13325B;">Newlands</span>
                                <span style="color: #9F7944;">University</span>
                            </div>
                            <div style="font-size: 0.85rem; color: #333; line-height: 1.2;">
                                Claims Management System
                            </div>
                        </div>
                    </div>

                    <!-- User Info and Profile Icon -->
                    <div class="d-flex align-items-center">
                        <!-- Role Switcher Dropdown -->
                        <div class="dropdown me-3">
                            <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" id="roleSwitcher" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-person-gear"></i> Switch Role
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="roleSwitcher">
                                <li><a class="dropdown-item" href="/Home/Index"><i class="bi bi-person"></i> Lecturer</a></li>
                                <li><a class="dropdown-item" href="/Admin/Coordinator/Dashboard"><i class="bi bi-shield-check"></i> Programme Coordinator</a></li>
                                <li><a class="dropdown-item" href="/Admin/Manager/Dashboard"><i class="bi bi-briefcase"></i> Academic Manager</a></li>
                            </ul>
                        </div>

                        @{
                            var currentPath = Context.Request.Path.ToString().ToLower();
                            var userName = "Michael Jones";
                            var userRole = "Lecturer";

                            if (currentPath.Contains("/admin/manager"))
                            {
                                userName = "Janet Du Plessis";
                                userRole = "Academic Manager";
                            }
                            else if (currentPath.Contains("/admin/coordinator") || currentPath.Contains("/admin/dashboard") || currentPath.Contains("/admin/trackclaims"))
                            {
                                userName = "Ebrahim Jacobs";
                                userRole = "Programme Coordinator";
                            }
                        }

                        <div class="text-end me-2">
                            <div style="font-size: 0.95rem; font-weight: 500; color: #333; line-height: 1.2;">
                                @userName
                            </div>
                            <div style="font-size: 0.8rem; color: #6c757d; line-height: 1.2;">
                                @userRole
                            </div>
                        </div>
                        <i class="bi bi-person-circle" style="font-size: 2rem; color: #13325B;"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Bottom Row: Blue Background with Gold Navigation Buttons -->
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm" style="background-color: #13325B; padding: 0.5rem 0;">
        <div class="container-fluid">
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
        aria-expanded="false" aria-label="Toggle navigation" style="background-color: white;">
        <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse">
        @if (currentPath.Contains("/admin/manager"))
        {
        <!-- Manager Navigation -->
        <ul class="navbar-nav">
        <li class="nav-item me-2">
        <a class="nav-link" asp-area="" asp-controller="Manager" asp-action="Dashboard"
        style="background-color: #9F7944; color: white; padding: 8px 20px; border-radius: 4px;">
        <i class="bi bi-house-door"></i> Dashboard
        </a>
        </li>
        <li class="nav-item me-2">
        <a class="nav-link" asp-area="" asp-controller="Manager" asp-action="Review"
           style="background-color: #9F7944; color: white; padding: 8px 20px; border-radius: 4px;">
        <i class="bi bi-file-earmark-check"></i> Review & Approve
        </a>
        </li>
        <li class="nav-item">
        <a class="nav-link" asp-area="" asp-controller="Manager" asp-action="TrackClaims"
           style="background-color: #9F7944; color: white; padding: 8px 20px; border-radius: 4px;">
            <i class="bi bi-list-check"></i> Track Claims
        </a>
        </li>
        </ul>
        }
        else if (currentPath.Contains("/admin/"))
        {
        <!-- Coordinator Navigation -->
        <ul class="navbar-nav">
        <li class="nav-item me-2">
        <a class="nav-link" asp-area="" asp-controller="Coordinator" asp-action="Dashboard"
           style="background-color: #9F7944; color: white; padding: 8px 20px; border-radius: 4px;">
                <i class="bi bi-house-door"></i> Dashboard
                </a>
                </li>
                            <li class="nav-item me-2">
                                <a class="nav-link" asp-area="" asp-controller="Coordinator" asp-action="Review"
                                   style="background-color: #9F7944; color: white; padding: 8px 20px; border-radius: 4px;">
                                    <i class="bi bi-file-earmark-check"></i> Review & Approve
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Coordinator" asp-action="TrackClaims"
                                   style="background-color: #9F7944; color: white; padding: 8px 20px; border-radius: 4px;">
                                    <i class="bi bi-list-check"></i> Track Claims
                                </a>
                            </li>
                        </ul>
                    }
                    else
                    {
                        <!-- Lecturer Navigation -->
                        <ul class="navbar-nav">
                            <li class="nav-item me-2">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index"
                                   style="background-color: #9F7944; color: white; padding: 8px 20px; border-radius: 4px;">
                                    <i class="bi bi-house-door"></i> Dashboard
                                </a>
                            </li>
                            <li class="nav-item me-2">
                                <a class="nav-link" asp-area="" asp-controller="Claims" asp-action="Create"
                                   style="background-color: #9F7944; color: white; padding: 8px 20px; border-radius: 4px;">
                                    <i class="bi bi-file-earmark-plus"></i> File New Claim
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Claims" asp-action="Index"
                                   style="background-color: #9F7944; color: white; padding: 8px 20px; border-radius: 4px;">
                                    <i class="bi bi-list-check"></i> Track Claims
                                </a>
                            </li>
                        </ul>
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-5">
        <div class="container text-center">
            &copy; 2025 - Newlands University - Contract Monthly Claim System
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
