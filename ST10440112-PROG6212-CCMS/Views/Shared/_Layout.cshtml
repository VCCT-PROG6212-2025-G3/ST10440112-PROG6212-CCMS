<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CMCS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ST10440112_PROG6212_CCMS.styles.css" asp-append-version="true" />
    
    <style>
        /* Smooth transitions */
        .btn, .card, .nav-link {
            transition: all 0.3s ease;
        }

        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.2);
        }

        .card:hover {
            box-shadow: 0 6px 12px rgba(0,0,0,0.15);
        }

        /* Loading states */
        .btn:disabled {
            cursor: not-allowed;
            opacity: 0.6;
        }

        /* Smooth page transitions */
        main {
            animation: fadeIn 0.5s ease-in;
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Focus states for accessibility */
        *:focus {
            outline: 2px solid #9F7944;
            outline-offset: 2px;
        }
    </style>
    
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <!-- Top Row: White Background with Logo, Title, and User Info -->
        <div class="navbar-top" style="background-color: white; border-bottom: 1px solid #dee2e6; padding: 10px 0;">
            <div class="container-fluid">
                <div class="d-flex justify-content-between align-items-center">
                    <!-- Logo and Title -->
                    <div class="d-flex align-items-center">
                        <img src="~/NLUNI-Logo.png" alt="Newlands University" height="80" class="me-3" />
                        <div>
                            <div style="font-size: 1.2rem; font-weight: bold; line-height: 1.2;">
                                <span style="color: #13325B;">Newlands</span>
                                <span style="color: #9F7944;">University</span>
                            </div>
                            <div style="font-size: 0.85rem; color: #333; line-height: 1.2;">
                                Claims Management System
                            </div>
                        </div>
                    </div>

                    <!-- User Info and Profile Icon -->
                    <div class="d-flex align-items-center">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <div class="dropdown me-3">
                                <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" id="userMenu" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-person-circle"></i>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userMenu">
                                    <li><a class="dropdown-item disabled" href="#"><i class="bi bi-person"></i> @User.Identity.Name</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form method="post" asp-action="Logout" asp-controller="Account">
                                            <button type="submit" class="dropdown-item"><i class="bi bi-box-arrow-right"></i> Logout</button>
                                        </form>
                                    </li>
                                </ul>
                            </div>

                            <div class="text-end me-2">
                                <div style="font-size: 0.95rem; font-weight: 500; color: #333; line-height: 1.2;">
                                    @User.FindFirst("FullName")?.Value
                                </div>
                                <div style="font-size: 0.8rem; color: #6c757d; line-height: 1.2;">
                                    @(User.IsInRole("Lecturer") ? "Lecturer" :
                                      User.IsInRole("ProgrammeCoordinator") ? "Coordinator" :
                                      User.IsInRole("AcademicManager") ? "Manager" :
                                      User.IsInRole("HR") ? "HR" : "User")
                                </div>
                            </div>
                        }
                        else
                        {
                            <a href="@Url.Action("Login", "Account")" class="btn btn-sm btn-primary">Login</a>
                        }
                        <i class="bi bi-person-circle" style="font-size: 2rem; color: #13325B;"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Bottom Row: Blue Background with Gold Navigation Buttons -->
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm" style="background-color: #13325B; padding: 0.5rem 0;">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation" style="background-color: white;">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse">
                    @if (User.IsInRole("AcademicManager"))
                    {
                        <!-- Manager Navigation -->
                        <ul class="navbar-nav">
                            <li class="nav-item me-2">
                                <a class="nav-link" asp-area="" asp-controller="Manager" asp-action="Dashboard"
                                   style="background-color: #9F7944; color: white; padding: 8px 20px; border-radius: 4px;">
                                    <i class="bi bi-house-door"></i> Dashboard
                                </a>
                            </li>
                            <li class="nav-item me-2">
                                <a class="nav-link" asp-area="" asp-controller="Manager" asp-action="Review"
                                   style="background-color: #9F7944; color: white; padding: 8px 20px; border-radius: 4px;">
                                    <i class="bi bi-file-earmark-check"></i> Review & Approve
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Manager" asp-action="TrackClaims"
                                   style="background-color: #9F7944; color: white; padding: 8px 20px; border-radius: 4px;">
                                    <i class="bi bi-list-check"></i> Track Claims
                                </a>
                            </li>
                        </ul>
                    }
                    else if (User.IsInRole("ProgrammeCoordinator"))
                    {
                        <!-- Coordinator Navigation -->
                        <ul class="navbar-nav">
                            <li class="nav-item me-2">
                                <a class="nav-link" asp-area="" asp-controller="Coordinator" asp-action="Dashboard"
                                   style="background-color: #9F7944; color: white; padding: 8px 20px; border-radius: 4px;">
                                    <i class="bi bi-house-door"></i> Dashboard
                                </a>
                            </li>
                            <li class="nav-item me-2">
                                <a class="nav-link" asp-area="" asp-controller="Coordinator" asp-action="VerifyClaims"
                                   style="background-color: #9F7944; color: white; padding: 8px 20px; border-radius: 4px;">
                                    <i class="bi bi-file-earmark-check"></i> Verify Claims
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Coordinator" asp-action="VerifiedClaims"
                                   style="background-color: #9F7944; color: white; padding: 8px 20px; border-radius: 4px;">
                                    <i class="bi bi-check-circle"></i> Verified Claims
                                </a>
                            </li>
                        </ul>
                    }
                    else if (User.IsInRole("HR"))
                    {
                        <!-- HR Navigation -->
                        <ul class="navbar-nav">
                            <li class="nav-item me-2">
                                <a class="nav-link" asp-area="" asp-controller="HR" asp-action="Dashboard"
                                   style="background-color: #9F7944; color: white; padding: 8px 20px; border-radius: 4px;">
                                    <i class="bi bi-house-door"></i> Dashboard
                                </a>
                            </li>
                            <li class="nav-item me-2">
                                <a class="nav-link" asp-area="" asp-controller="HR" asp-action="ManageLecturers"
                                   style="background-color: #9F7944; color: white; padding: 8px 20px; border-radius: 4px;">
                                    <i class="bi bi-people"></i> Manage Lecturers
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="HR" asp-action="ApprovedClaims"
                                   style="background-color: #9F7944; color: white; padding: 8px 20px; border-radius: 4px;">
                                    <i class="bi bi-file-check"></i> Approved Claims
                                </a>
                            </li>
                        </ul>
                    }
                    else if (User.IsInRole("Lecturer"))
                    {
                        <!-- Lecturer Navigation -->
                        <ul class="navbar-nav">
                            <li class="nav-item me-2">
                                <a class="nav-link" asp-area="" asp-controller="Lecturer" asp-action="Dashboard"
                                   style="background-color: #9F7944; color: white; padding: 8px 20px; border-radius: 4px;">
                                    <i class="bi bi-house-door"></i> Dashboard
                                </a>
                            </li>
                            <li class="nav-item me-2">
                                <a class="nav-link" asp-area="" asp-controller="Lecturer" asp-action="SubmitClaim"
                                   style="background-color: #9F7944; color: white; padding: 8px 20px; border-radius: 4px;">
                                    <i class="bi bi-file-earmark-plus"></i> Submit Claim
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Lecturer" asp-action="MyClaims"
                                   style="background-color: #9F7944; color: white; padding: 8px 20px; border-radius: 4px;">
                                    <i class="bi bi-list-check"></i> My Claims
                                </a>
                            </li>
                        </ul>
                    }
                    else
                    {
                        <!-- Default Navigation (if no role matches) -->
                        <ul class="navbar-nav">
                            <li class="nav-item me-2">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index"
                                   style="background-color: #9F7944; color: white; padding: 8px 20px; border-radius: 4px;">
                                    <i class="bi bi-house-door"></i> Home
                                </a>
                            </li>
                        </ul>
                    }
                </div>
            </div>
        </nav>
    </header>
    
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-5">
        <div class="container text-center">
            &copy; 2025 - Newlands University - Contract Monthly Claim System
        </div>
    </footer>

    <!-- Include shared components -->
    <partial name="_LoadingSpinner" />
    <partial name="_ToastNotifications" />
    <partial name="_ConfirmationDialog" />
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    <script>
        // Global loading overlay functions
        function showLoading() {
            document.getElementById('loadingOverlay').style.display = 'flex';
        }

        function hideLoading() {
            document.getElementById('loadingOverlay').style.display = 'none';
        }

        // Auto-hide loading on page load
        document.addEventListener('DOMContentLoaded', function() {
            hideLoading();
        });

        // Show loading on form submit
        document.querySelectorAll('form').forEach(function(form) {
            form.addEventListener('submit', function() {
                showLoading();
            });
        });
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
