@model IEnumerable<ST10440112_PROG6212_CCMS.Models.Claim>

@{
    ViewData["Title"] = "Dashboard";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Dashboard</h2>
        <a asp-controller="Claims" asp-action="Create" class="btn btn-primary" style="background-color: #9F7944; border-color: #9F7944;">
            <i class="bi bi-plus-circle"></i> File New Claim
        </a>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title" style="font-weight: 600; color: #000;">Total Claims</h5>
                    <h2 class="mb-2" style="font-weight: bold; color: #13325B; font-size: 2.5rem;">@ViewBag.TotalClaims</h2>
                    <p class="mb-0 text-muted">All-Time Claims</p>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title" style="font-weight: 600; color: #000;">Approved Claims</h5>
                    <h2 class="mb-2" style="font-weight: bold; color: #9F7944; font-size: 2.5rem;">@ViewBag.ApprovedClaims</h2>
                    <p class="mb-0 text-muted">Reviewed and Approved</p>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title" style="font-weight: 600; color: #000;">Pending/Denied Claims</h5>
                    <h2 class="mb-2" style="font-weight: bold; color: #ff8c00; font-size: 2.5rem;">@ViewBag.PendingClaims/@ViewBag.RejectedClaims</h2>
                    <p class="mb-0 text-muted">Not yet reviewed</p>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title" style="font-weight: 600; color: #000;">Total Amount Claimed</h5>
                    <h2 class="mb-2" style="font-weight: bold; color: #28a745; font-size: 2.5rem;">R@(ViewBag.TotalAmount.ToString("N0"))</h2>
                    <p class="mb-0 text-muted">Rand Value of all claims</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Search and Sort -->
    <div class="card mb-3">
        <div class="card-body">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-search"></i></span>
                        <input type="text" class="form-control" id="searchInput" placeholder="Search claims...">
                    </div>
                </div>
                <div class="col-md-4 text-end">
                    <label class="me-2">Sort By:</label>
                    <button class="btn btn-sm btn-outline-secondary me-1">
                        <i class="bi bi-calendar"></i> Date
                    </button>
                    <button class="btn btn-sm btn-outline-secondary">
                        <i class="bi bi-check-square"></i> Status
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Claims Table -->
    <div class="card">
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover" id="claimsTable">
                        <thead style="background-color: #f8f9fa;">
                            <tr>
                                <th>ClaimID</th>
                                <th>Status</th>
                                <th>Total Hours</th>
                                <th>Amount</th>
                                <th>Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var claim in Model)
                            {
                                <tr>
                                    <td><strong>@claim.ClaimId.ToString().Substring(0, 13)</strong></td>
                                    <td>
                                        @if (claim.ClaimStatus == "Pending")
                                        {
                                            <span class="badge" style="background-color: #fff3cd; color: #856404;">Pending</span>
                                        }
                                        else if (claim.ClaimStatus == "Approved")
                                        {
                                            <span class="badge" style="background-color: #d4edda; color: #155724;">Approved</span>
                                        }
                                        else if (claim.ClaimStatus == "Rejected")
                                        {
                                            <span class="badge" style="background-color: #f8d7da; color: #721c24;">Rejected</span>
                                        }
                                        else if (claim.ClaimStatus == "Verified")
                                        {
                                            <span class="badge" style="background-color: #d1ecf1; color: #0c5460;">Verified</span>
                                        }
                                        else
                                        {
                                            <span class="badge" style="background-color: #e2e3e5; color: #383d41;">@claim.ClaimStatus</span>
                                        }
                                    </td>
                                    <td>@claim.TotalHours</td>
                                    <td><strong>R@((claim.TotalHours * claim.HourlyRate).ToString("N0"))</strong></td>
                                    <td>@claim.SubmissionDate.ToString("dd-MM-yyyy")</td>
                                    <td>
                                        <a asp-controller="Claims" asp-action="Details" asp-route-id="@claim.ClaimId" class="btn btn-sm btn-link p-0 me-2" style="color: #9F7944; text-decoration: none;" title="View">
                                            <i class="bi bi-eye" style="font-size: 1.2rem;"></i>
                                        </a>
                                        @if (claim.ClaimStatus == "Pending")
                                        {
                                            <a asp-controller="Claims" asp-action="AddDocuments" asp-route-id="@claim.ClaimId" class="btn btn-sm btn-link p-0 me-2" style="color: #9F7944; text-decoration: none;" title="Add Supporting Document">
                                                <i class="bi bi-file-earmark-plus" style="font-size: 1.2rem;"></i>
                                            </a>
                                        }
                                        else
                                        {
                                            <button class="btn btn-sm btn-link p-0 me-2" style="color: #9F7944; text-decoration: none; opacity: 0.3;" title="Cannot add documents after review" disabled>
                                                <i class="bi bi-file-earmark-plus" style="font-size: 1.2rem;"></i>
                                            </button>
                                        }
                                        <button class="btn btn-sm btn-link p-0 me-2" style="color: #9F7944; text-decoration: none;" title="Read Comments" data-bs-toggle="modal" data-bs-target="#commentsModal-@claim.ClaimId">
                                            <i class="bi bi-chat" style="font-size: 1.2rem;"></i>
                                        </button>
                                        <button class="btn btn-sm btn-link p-0" style="color: #9F7944; text-decoration: none;" title="Download Claim" onclick="window.print()">
                                            <i class="bi bi-download" style="font-size: 1.2rem;"></i>
                                        </button>

                                        <!-- Comments Modal -->
                                        <div class="modal fade" id="commentsModal-@claim.ClaimId" tabindex="-1">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header" style="background-color: #13325B; color: white;">
                                                        <h5 class="modal-title">Review Comments</h5>
                                                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <div class="mb-2">
                                                            <strong>Claim ID:</strong> @claim.ClaimId.ToString().Substring(0, 13)...
                                                        </div>
                                                        <hr />
                                                        @if (claim.Comments != null && claim.Comments.Any())
                                                        {
                                                            @foreach (var comment in claim.Comments.OrderByDescending(c => c.CreatedDate))
                                                            {
                                                                <div class="card mb-3" style="border-left: 4px solid #9F7944;">
                                                                    <div class="card-body">
                                                                        <div class="d-flex justify-content-between align-items-start mb-2">
                                                                            <div>
                                                                                <strong style="color: #13325B;">@comment.AuthorName</strong>
                                                                                <span class="badge bg-secondary ms-2">@comment.AuthorRole</span>
                                                                            </div>
                                                                            <small class="text-muted">@comment.CreatedDate.ToString("dd MMM yyyy")</small>
                                                                        </div>
                                                                        <p class="mb-0">@comment.CommentText</p>
                                                                    </div>
                                                                </div>
                                                            }
                                                        }
                                                        else
                                                        {
                                                            <div class="alert alert-info">
                                                                <i class="bi bi-info-circle"></i> No comments from reviewers yet.
                                                            </div>
                                                        }
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-inbox" style="font-size: 3rem; color: #6c757d;"></i>
                    <p class="text-muted mt-3">No claims found. Click "File New Claim" to get started.</p>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Simple search functionality
        document.getElementById('searchInput').addEventListener('keyup', function() {
            var searchValue = this.value.toLowerCase();
            var table = document.getElementById('claimsTable');
            var rows = table.getElementsByTagName('tr');

            for (var i = 1; i < rows.length; i++) {
                var row = rows[i];
                var text = row.textContent.toLowerCase();
                row.style.display = text.includes(searchValue) ? '' : 'none';
            }
        });
    </script>
}
