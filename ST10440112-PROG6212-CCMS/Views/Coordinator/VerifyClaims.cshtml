@model List<ST10440112_PROG6212_CCMS.Models.Claim>

@{
    ViewData["Title"] = "Verify Claims";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h2><i class="bi bi-file-earmark-check"></i> Verify Claims</h2>
            <p class="text-muted">Review and verify pending lecturer claims</p>
        </div>
        <div class="col-md-4 text-end">
            <a href="@Url.Action("Dashboard", "Coordinator")" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to Dashboard
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-circle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Hidden form for anti-forgery token -->
    <form id="tokenForm" method="post" style="display: none;">
        @Html.AntiForgeryToken()
    </form>

    @if (Model.Count > 0)
    {
        <div class="mb-3">
            <form method="post" asp-area="" asp-controller="Coordinator" asp-action="AutoVerifyAll">
                <button type="submit" class="btn btn-warning" onclick="return confirm('Auto-verify all @Model.Count pending claims?')">
                    <i class="bi bi-lightning"></i> Auto-Verify All (@Model.Count)
                </button>
            </form>
        </div>

        <div class="table-responsive">
            <table class="table table-hover">
                <thead style="background-color: #13325B; color: white;">
                    <tr>
                        <th>Lecturer</th>
                        <th>Claim Date</th>
                        <th>Hours</th>
                        <th>Hourly Rate</th>
                        <th>Total Amount</th>
                        <th>Submitted</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var claim in Model)
                    {
                        <tr>
                            <td>
                                <strong>@claim.Lecturer?.Name ?? "Unknown"</strong><br>
                                <small class="text-muted">@claim.Lecturer?.Email</small>
                            </td>
                            <td>@claim.ClaimDate.ToString("dd MMM yyyy")</td>
                            <td>@claim.TotalHours.ToString("F1")</td>
                            <td>R @claim.HourlyRate.ToString("N2")</td>
                            <td>
                                <span class="badge bg-info" style="font-size: 0.9rem;">
                                    R @(claim.TotalHours * claim.HourlyRate).ToString("N2")
                                </span>
                            </td>
                            <td>@claim.SubmissionDate.ToString("dd MMM yyyy")</td>
                            <td>
                                <button type="button" class="btn btn-sm btn-success" onclick="verifyClaimPost('@claim.ClaimId')" title="Verify this claim">
                                    <i class="bi bi-check-lg"></i> Verify
                                </button>
                                <button type="button" class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#rejectModal" onclick="setClaimId('@claim.ClaimId')" title="Reject this claim">
                                    <i class="bi bi-x-lg"></i> Reject
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No pending claims to verify at this time.
        </div>
    }
</div>

<!-- Reject Modal -->
<div class="modal fade" id="rejectModal" tabindex="-1" aria-labelledby="rejectModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header" style="background-color: #dc3545; color: white;">
                <h5 class="modal-title" id="rejectModalLabel">Reject Claim</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form method="post" asp-area="" asp-controller="Coordinator" asp-action="RejectClaim" id="rejectForm">
                <div class="modal-body">
                    <input type="hidden" name="id" id="claimIdInput" />
                    <div class="mb-3">
                        <label for="reason" class="form-label">Rejection Reason *</label>
                        <textarea class="form-control" id="reason" name="reason" rows="4" required placeholder="Provide the reason for rejection..."></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Reject Claim</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    function setClaimId(claimId) {
        document.getElementById('claimIdInput').value = claimId;
    }

    function verifyClaimPost(claimId) {
        const form = document.createElement('form');
        form.method = 'POST';
        form.action = '@Url.Action("VerifyClaim", "Coordinator")';

        const input = document.createElement('input');
        input.type = 'hidden';
        input.name = 'id';
        input.value = claimId;

        const token = document.querySelector('input[name="__RequestVerificationToken"]');
        if (token) {
            form.appendChild(token.cloneNode());
        }

        form.appendChild(input);
        document.body.appendChild(form);
        form.submit();
    }
</script>
