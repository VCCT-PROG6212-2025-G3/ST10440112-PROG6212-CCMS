@{
    ViewData["Title"] = "Manager Dashboard";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-12">
            <h2><i class="bi bi-speedometer2"></i> Academic Manager Dashboard</h2>
            <p class="text-muted">Approve or reject verified lecturer claims</p>
        </div>
    </div>

    <div class="row mb-4">
        <!-- Verified Claims Card -->
        <div class="col-md-3 mb-3">
            <div class="card h-100 shadow-sm border-info">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title text-muted">Verified Claims</h6>
                            <h3 class="card-text" style="color: #13325B; font-weight: 600;">@ViewBag.VerifiedClaims</h3>
                        </div>
                        <i class="bi bi-check-circle" style="font-size: 2.5rem; color: #17a2b8; opacity: 0.5;"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Approved Claims Card -->
        <div class="col-md-3 mb-3">
            <div class="card h-100 shadow-sm border-success">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title text-muted">Approved Claims</h6>
                            <h3 class="card-text" style="color: #13325B; font-weight: 600;">@ViewBag.ApprovedClaims</h3>
                        </div>
                        <i class="bi bi-check2-circle" style="font-size: 2.5rem; color: #28a745; opacity: 0.5;"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Rejected Claims Card -->
        <div class="col-md-3 mb-3">
            <div class="card h-100 shadow-sm border-danger">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title text-muted">Rejected Claims</h6>
                            <h3 class="card-text" style="color: #13325B; font-weight: 600;">@ViewBag.RejectedClaims</h3>
                        </div>
                        <i class="bi bi-x-circle" style="font-size: 2.5rem; color: #dc3545; opacity: 0.5;"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Total Value Card -->
        <div class="col-md-3 mb-3">
            <div class="card h-100 shadow-sm border-warning">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title text-muted">Total Value (Verified)</h6>
                            <h3 class="card-text" style="color: #13325B; font-weight: 600;">R @ViewBag.TotalClaimsValue?.ToString("N0")</h3>
                        </div>
                        <i class="bi bi-cash-coin" style="font-size: 2.5rem; color: #9F7944; opacity: 0.5;"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-lightning-fill"></i> Quick Actions</h5>
                    <div class="row">
                        <div class="col-md-4 mb-2">
                            <a href="@Url.Action("Review", "Manager")" class="btn btn-primary w-100">
                                <i class="bi bi-file-earmark-check"></i> Review Verified Claims
                            </a>
                        </div>
                        <div class="col-md-4 mb-2">
                            <a href="@Url.Action("TrackClaims", "Manager")" class="btn btn-info w-100">
                                <i class="bi bi-list-check"></i> Track All Claims
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Approval Workflow Info -->
    <div class="row">
        <div class="col-md-12">
            <div class="card shadow-sm">
                <div class="card-header" style="background-color: #13325B; color: white;">
                    <h6 class="mb-0"><i class="bi bi-info-circle"></i> Approval Workflow</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6>Approval Process:</h6>
                            <ol class="list-unstyled">
                                <li class="mb-2"><strong>1.</strong> Lecturer submits claim</li>
                                <li class="mb-2"><strong>2.</strong> Coordinator verifies claim against rules</li>
                                <li class="mb-2"><strong>3.</strong> Manager approves verified claim</li>
                                <li><strong>4.</strong> HR processes settlement</li>
                            </ol>
                        </div>
                        <div class="col-md-6">
                            <h6>Your Responsibilities:</h6>
                            <ul class="list-unstyled">
                                <li class="mb-2"><i class="bi bi-check-lg text-success"></i> Review verified claims</li>
                                <li class="mb-2"><i class="bi bi-check-lg text-success"></i> Approve valid claims</li>
                                <li class="mb-2"><i class="bi bi-check-lg text-success"></i> Reject claims with issues</li>
                                <li><i class="bi bi-check-lg text-success"></i> Track approval workflow</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
