@model List<ST10440112_PROG6212_CCMS.Models.Claim>

@{
    ViewData["Title"] = "Generate Report";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h2><i class="bi bi-graph-up"></i> Generate Report</h2>
            <p class="text-muted">Create detailed reports of approved claims</p>
        </div>
        <div class="col-md-4 text-end">
            <a href="@Url.Action("Dashboard", "HR")" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to Dashboard
            </a>
        </div>
    </div>

    <!-- Report Filters -->
    <div class="card shadow-sm mb-4">
        <div class="card-header" style="background-color: #13325B; color: white;">
            <h6 class="mb-0"><i class="bi bi-funnel"></i> Report Filters</h6>
        </div>
        <div class="card-body">
            <form method="get" asp-action="GenerateReport">
                <div class="row">
                    <div class="col-md-3">
                        <label for="startDate" class="form-label">Start Date</label>
                        <input type="date" id="startDate" name="startDate" class="form-control" value="@ViewBag.StartDate?.ToString("yyyy-MM-dd")">
                    </div>
                    <div class="col-md-3">
                        <label for="endDate" class="form-label">End Date</label>
                        <input type="date" id="endDate" name="endDate" class="form-control" value="@ViewBag.EndDate?.ToString("yyyy-MM-dd")">
                    </div>
                    <div class="col-md-3">
                        <label for="reportType" class="form-label">Report Type</label>
                        <select id="reportType" name="reportType" class="form-control">
                            <option value="all" selected>All Claims</option>
                            <option value="approved">Approved Only</option>
                            <option value="monthly">Monthly Summary</option>
                        </select>
                    </div>
                    <div class="col-md-3 d-flex align-items-end gap-2">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bi bi-search"></i> Generate
                        </button>
                        <a href="@Url.Action("ExportReportCSV", "HR")" class="btn btn-success w-100">
                            <i class="bi bi-download"></i> Export CSV
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    @if (Model.Count > 0)
    {
        <!-- Report Summary -->
        <div class="row mb-4">
            <div class="col-md-3 mb-3">
                <div class="card shadow-sm border-info">
                    <div class="card-body">
                        <h6 class="card-title text-muted">Total Claims</h6>
                        <h3 style="color: #13325B; font-weight: 600;">@ViewBag.TotalClaims</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card shadow-sm border-warning">
                    <div class="card-body">
                        <h6 class="card-title text-muted">Total Hours</h6>
                        <h3 style="color: #13325B; font-weight: 600;">@ViewBag.TotalHours?.ToString("F1")</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card shadow-sm border-success">
                    <div class="card-body">
                        <h6 class="card-title text-muted">Total Amount</h6>
                        <h3 style="color: #13325B; font-weight: 600;">R @ViewBag.TotalAmount?.ToString("N0")</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card shadow-sm border-primary">
                    <div class="card-body">
                        <h6 class="card-title text-muted">Avg Amount/Claim</h6>
                        <h3 style="color: #13325B; font-weight: 600;">R @(ViewBag.TotalAmount > 0 ? (ViewBag.TotalAmount / ViewBag.TotalClaims).ToString("N0") : "0")</h3>
                    </div>
                </div>
            </div>
        </div>

        <!-- Report Table -->
        <div class="card shadow-sm">
            <div class="card-header" style="background-color: #13325B; color: white;">
                <h6 class="mb-0"><i class="bi bi-table"></i> Claim Details</h6>
            </div>
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead style="background-color: #f8f9fa;">
                        <tr>
                            <th>Lecturer</th>
                            <th>Email</th>
                            <th>Claim Date</th>
                            <th>Hours</th>
                            <th>Hourly Rate</th>
                            <th>Total Amount</th>
                            <th>Approved Date</th>
                            <th>Payment Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var claim in Model)
                        {
                            var paymentBadge = claim.IsSettled ? "bg-success" : "bg-warning";
                            var paymentStatus = claim.IsSettled ? "Settled" : "Pending";

                            <tr>
                                <td>
                                    <strong>@(claim.Lecturer?.Name ?? "Unknown")</strong>
                                </td>
                                <td>
                                    <small class="text-muted">@claim.Lecturer?.Email</small>
                                </td>
                                <td>@claim.ClaimDate.ToString("dd MMM yyyy")</td>
                                <td>@claim.TotalHours.ToString("F1")</td>
                                <td>R @claim.HourlyRate.ToString("N2")</td>
                                <td>
                                    <span class="badge bg-info">R @(((decimal)claim.TotalHours * claim.HourlyRate).ToString("N2"))</span>
                                </td>
                                <td>@claim.ApprovedDate?.ToString("dd MMM yyyy")</td>
                                <td>
                                    <span class="badge @paymentBadge">@paymentStatus</span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Print Options -->
        <div class="row mt-4">
            <div class="col-md-12">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h6 class="card-title"><i class="bi bi-download"></i> Export Report</h6>
                        <div class="row">
                            <div class="col-md-6 mb-2">
                                <a href="@Url.Action("ExportReportCSV", "HR", new { reportType = ViewBag.ReportType, startDate = ViewBag.StartDate, endDate = ViewBag.EndDate })" class="btn btn-primary w-100">
                                    <i class="bi bi-file-csv"></i> Download as CSV
                                </a>
                            </div>
                            <div class="col-md-6 mb-2">
                                <button onclick="window.print();" class="btn btn-info w-100">
                                    <i class="bi bi-printer"></i> Print Report
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No approved claims found for the selected filters.
        </div>
    }
</div>

<style>
    @@media print {
        .card-header {
            background-color: #13325B !important;
        }

        .btn {
            display: none !important;
        }

        body {
            background-color: white;
        }

        .card {
            border: none;
            box-shadow: none;
        }
    }
</style>
