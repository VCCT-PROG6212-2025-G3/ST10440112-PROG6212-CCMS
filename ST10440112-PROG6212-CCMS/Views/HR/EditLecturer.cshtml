@model ST10440112_PROG6212_CCMS.Models.Lecturer

@{
    ViewData["Title"] = "Edit Lecturer";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h2><i class="bi bi-pencil-square"></i> Edit Lecturer</h2>
            <p class="text-muted">Update lecturer information and hourly rate</p>
        </div>
        <div class="col-md-4 text-end">
            <a href="@Url.Action("ManageLecturers", "HR")" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form asp-action="EditLecturer" method="post" novalidate>
                        <input type="hidden" asp-for="LecturerId" />

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Full Name *</label>
                            <input type="text" class="form-control"
                                   asp-for="Name" required>
                            <span class="text-danger small" asp-validation-for="Name"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Email Address *</label>
                            <input type="email" class="form-control"
                                   asp-for="Email" required>
                            <span class="text-danger small" asp-validation-for="Email"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Department" class="form-label">Department *</label>
                            <input type="text" class="form-control"
                                   asp-for="Department" required>
                            <span class="text-danger small" asp-validation-for="Department"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="HourlyRate" class="form-label">Hourly Rate (ZAR) *</label>
                            <div class="input-group">
                                <span class="input-group-text">R</span>
                                <input type="number" class="form-control"
                                       asp-for="HourlyRate" step="0.01" min="100" max="10000" required>
                            </div>
                            <small class="text-muted">Range: 100 - 10,000 ZAR</small>
                            <span class="text-danger small d-block" asp-validation-for="HourlyRate"></span>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Save Changes
                            </button>
                            <a href="@Url.Action("ManageLecturers", "HR")" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
