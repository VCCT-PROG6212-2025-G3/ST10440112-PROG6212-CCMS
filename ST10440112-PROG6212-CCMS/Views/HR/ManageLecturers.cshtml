@model List<ST10440112_PROG6212_CCMS.Models.Lecturer>

@{
    ViewData["Title"] = "Manage Lecturers";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h2><i class="bi bi-people"></i> Manage Lecturers</h2>
            <p class="text-muted">View and update lecturer information including hourly rates</p>
        </div>
        <div class="col-md-4 text-end">
            <a href="@Url.Action("Dashboard", "HR")" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to Dashboard
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-circle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <form method="get" class="mb-0">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Search by name or email..." name="searchTerm">
                    <button class="btn btn-primary" type="submit">
                        <i class="bi bi-search"></i> Search
                    </button>
                </div>
            </form>
        </div>
    </div>

    @if (Model.Count > 0)
    {
        <div class="table-responsive">
            <table class="table table-hover">
                <thead style="background-color: #13325B; color: white;">
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Department</th>
                        <th>Hourly Rate (ZAR)</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var lecturer in Model)
                    {
                        <tr>
                            <td>
                                <strong>@lecturer.Name</strong>
                            </td>
                            <td>@lecturer.Email</td>
                            <td>@lecturer.Department</td>
                            <td>
                                <span class="badge bg-info" style="font-size: 0.9rem;">R @lecturer.HourlyRate.ToString("N2")</span>
                            </td>
                            <td>
                                <a href="@Url.Action("EditLecturer", new { id = lecturer.LecturerId })" class="btn btn-sm btn-warning">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                                <a href="@Url.Action("DeleteLecturer", new { id = lecturer.LecturerId })" class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No lecturers found.
        </div>
    }
</div>
