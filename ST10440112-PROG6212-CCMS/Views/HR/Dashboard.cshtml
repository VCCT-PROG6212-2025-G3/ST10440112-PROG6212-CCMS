@{
    ViewData["Title"] = "HR Dashboard";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-12">
            <h2><i class="bi bi-speedometer2"></i> HR Dashboard</h2>
            <p class="text-muted">Manage lecturers and monitor approved claims for payment</p>
        </div>
    </div>

    <div class="row mb-4">
        <!-- Total Lecturers Card -->
        <div class="col-md-4 mb-3">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title text-muted">Total Lecturers</h6>
                            <h3 class="card-text" style="color: #13325B; font-weight: 600;">@ViewBag.TotalLecturers</h3>
                        </div>
                        <i class="bi bi-people" style="font-size: 2.5rem; color: #9F7944; opacity: 0.5;"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Approved Claims Card -->
        <div class="col-md-4 mb-3">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title text-muted">Approved Claims (Unpaid)</h6>
                            <h3 class="card-text" style="color: #13325B; font-weight: 600;">@ViewBag.TotalApprovedClaims</h3>
                        </div>
                        <i class="bi bi-file-check" style="font-size: 2.5rem; color: #9F7944; opacity: 0.5;"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Total Payment Amount Card -->
        <div class="col-md-4 mb-3">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title text-muted">Total Payment Due</h6>
                            <h3 class="card-text" style="color: #13325B; font-weight: 600;">R @ViewBag.TotalPaymentAmount?.ToString("N2")</h3>
                        </div>
                        <i class="bi bi-cash-coin" style="font-size: 2.5rem; color: #9F7944; opacity: 0.5;"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title mb-4"><i class="bi bi-lightning-fill"></i> Quick Actions</h5>
                    <div class="row">
                        <div class="col-md-6 mb-2">
                            <a href="@Url.Action("ManageLecturers", "HR")" class="btn btn-outline-primary w-100">
                                <i class="bi bi-pencil-square"></i> Manage Lecturers
                            </a>
                        </div>
                        <div class="col-md-6 mb-2">
                            <a href="@Url.Action("ApprovedClaims", "HR")" class="btn btn-outline-success w-100">
                                <i class="bi bi-check-circle"></i> View Approved Claims
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
