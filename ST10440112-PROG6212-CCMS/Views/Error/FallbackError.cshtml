@{
    ViewData["Title"] = "Critical Error";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <div class="card border-danger">
                <div class="card-body">
                    <i class="bi bi-exclamation-octagon text-danger" style="font-size: 5rem;"></i>
                    <h2 class="mt-3">Critical Error</h2>
                    <p class="text-muted">
                        A critical error has occurred. The application cannot continue.
                    </p>
                    <p class="text-danger">
                        <strong>Please contact system administrator.</strong>
                    </p>
                    <div class="mt-4">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-primary">
                            <i class="bi bi-house-door"></i> Return to Home
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
