@model ST10440112_PROG6212_CCMS.Models.Claim

@{
    ViewData["Title"] = "Review Claim";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Review Claim</h2>
        <a asp-action="CoordinatorReview" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to Review List
        </a>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-header" style="background-color: #13325B; color: white;">
                    <h5 class="mb-0">Claim Information</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Claim ID:</strong>
                            <p>@Model.ClaimId</p>
                        </div>
                        <div class="col-md-6">
                            <strong>Status:</strong>
                            <p><span class="badge" style="background-color: #fff3cd; color: #856404;">@Model.ClaimStatus</span></p>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Lecturer:</strong>
                            <p>@Model.Lecturer?.Name</p>
                        </div>
                        <div class="col-md-6">
                            <strong>Department:</strong>
                            <p>@Model.Lecturer?.Department</p>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4">
                            <strong>Total Hours:</strong>
                            <p class="text-primary fs-5">@Model.TotalHours hours</p>
                        </div>
                        <div class="col-md-4">
                            <strong>Hourly Rate:</strong>
                            <p class="text-primary fs-5">R @Model.HourlyRate</p>
                        </div>
                        <div class="col-md-4">
                            <strong>Total Amount:</strong>
                            <h4 class="text-success">R @((Model.TotalHours * Model.HourlyRate).ToString("N2"))</h4>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-12">
                            <strong>Submission Date:</strong>
                            <p>@Model.SubmissionDate.ToString("dd MMMM yyyy, hh:mm tt")</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-header" style="background-color: #13325B; color: white;">
                    <h5 class="mb-0">Supporting Documents</h5>
                </div>
                <div class="card-body">
                    @if (Model.Documents != null && Model.Documents.Any())
                    {
                        <div class="list-group">
                            @foreach (var doc in Model.Documents)
                            {
                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <i class="bi bi-file-earmark-text fs-4"></i>
                                        <strong>@doc.Url.Split('/').Last()</strong>
                                        <br />
                                        <small class="text-muted">
                                            Uploaded: @doc.UploadDate.ToString("dd MMM yyyy") | Type: @doc.DocType
                                        </small>
                                    </div>
                                    <a href="/@doc.Url" target="_blank" class="btn btn-outline-primary">
                                        <i class="bi bi-download"></i> Download
                                    </a>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning">
                            <i class="bi bi-exclamation-triangle"></i> No documents attached to this claim.
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-header" style="background-color: #9F7944; color: white;">
                    <h5 class="mb-0">Actions</h5>
                </div>
                <div class="card-body">
                    <form asp-action="VerifyClaim" method="post">
                        <input type="hidden" name="claimId" value="@Model.ClaimId" />
                        
                        <div class="mb-3">
                            <label class="form-label">Comments/Notes</label>
                            <textarea name="comments" class="form-control" rows="4" placeholder="Add your review comments here..."></textarea>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" name="action" value="verify" class="btn btn-success btn-lg">
                                <i class="bi bi-check-circle"></i> Verify Claim
                            </button>
                            <button type="submit" name="action" value="reject" class="btn btn-danger btn-lg">
                                <i class="bi bi-x-circle"></i> Reject Claim
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="card">
                <div class="card-header" style="background-color: #13325B; color: white;">
                    <h6 class="mb-0">Review Checklist</h6>
                </div>
                <div class="card-body">
                    <div class="form-check mb-2">
                        <input class="form-check-input" type="checkbox" id="check1">
                        <label class="form-check-label" for="check1">
                            Hours worked are accurate
                        </label>
                    </div>
                    <div class="form-check mb-2">
                        <input class="form-check-input" type="checkbox" id="check2">
                        <label class="form-check-label" for="check2">
                            Hourly rate is correct
                        </label>
                    </div>
                    <div class="form-check mb-2">
                        <input class="form-check-input" type="checkbox" id="check3">
                        <label class="form-check-label" for="check3">
                            Documents are valid
                        </label>
                    </div>
                    <div class="form-check mb-2">
                        <input class="form-check-input" type="checkbox" id="check4">
                        <label class="form-check-label" for="check4">
                            All required information provided
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="check5">
                        <label class="form-check-label" for="check5">
                            Claim is within policy guidelines
                        </label>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
