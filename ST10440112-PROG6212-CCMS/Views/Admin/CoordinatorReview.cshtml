@model IEnumerable<ST10440112_PROG6212_CCMS.Models.Claim>

@{
    ViewData["Title"] = "Review & Approve Claims";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Review & Approve Claims</h2>
        <a asp-action="Dashboard" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to Dashboard
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card">
        <div class="card-header" style="background-color: #13325B; color: white;">
            <h5 class="mb-0">Pending Claims for Review</h5>
        </div>
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Claim ID</th>
                                <th>Lecturer</th>
                                <th>Documents</th>
                                <th>Review Status</th>
                                <th>Full Status</th>
                                <th>Total Hours</th>
                                <th>Amount</th>
                                <th>Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var claim in Model)
                            {
                                <tr>
                                    <td>
                                        <strong>@claim.ClaimId.ToString().Substring(0, 13)...</strong>
                                    </td>
                                    <td>
                                        <strong>@claim.Lecturer?.Name</strong><br />
                                        <small class="text-muted">@claim.Lecturer?.Department</small>
                                    </td>
                                    <td>
                                        @if (claim.Documents != null && claim.Documents.Any())
                                        {
                                            <div class="mb-1">
                                                @foreach (var doc in claim.Documents)
                                                {
                                                    <span class="badge bg-secondary me-1">@doc.DocType</span>
                                                }
                                            </div>
                                            <a href="#" class="btn btn-sm btn-outline-info" data-bs-toggle="modal" data-bs-target="#documentsModal-@claim.ClaimId">
                                                <i class="bi bi-files"></i> View (@claim.Documents.Count)
                                            </a>

                                            <!-- Documents Modal -->
                                            <div class="modal fade" id="documentsModal-@claim.ClaimId" tabindex="-1">
                                                <div class="modal-dialog">
                                                    <div class="modal-content">
                                                        <div class="modal-header" style="background-color: #13325B; color: white;">
                                                            <h5 class="modal-title">Supporting Documents</h5>
                                                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                                                        </div>
                                                        <div class="modal-body">
                                                            <div class="list-group">
                                                                @foreach (var doc in claim.Documents)
                                                                {
                                                                    <div class="list-group-item d-flex justify-content-between align-items-center">
                                                                        <div>
                                                                            <i class="bi bi-file-earmark-text"></i>
                                                                            <strong>@doc.Url.Split('/').Last()</strong><br />
                                                                            <small class="text-muted">Type: @doc.DocType | Uploaded: @doc.UploadDate.ToString("dd MMM yyyy")</small>
                                                                        </div>
                                                                        <a href="/@doc.Url" target="_blank" class="btn btn-sm btn-outline-primary">
                                                                            <i class="bi bi-download"></i>
                                                                        </a>
                                                                    </div>
                                                                }
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                        else
                                        {
                                            <span class="text-muted">No documents</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge" style="background-color: #d4edda; color: #155724;">Approved</span>
                                    </td>
                                    <td>
                                        <span class="badge" style="background-color: #fff3cd; color: #856404;">Pending</span>
                                    </td>
                                    <td>@claim.TotalHours hrs</td>
                                    <td><strong>R @((claim.TotalHours * claim.HourlyRate).ToString("N2"))</strong></td>
                                    <td>@claim.SubmissionDate.ToString("dd MMM yyyy")</td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a href="/Admin/Coordinator/ReviewDetails/@claim.ClaimId" class="btn btn-sm" style="background-color: #9F7944; color: white; border-color: #9F7944;">
                                                <i class="bi bi-eye"></i> Review Details
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-success">
                    <i class="bi bi-check-circle"></i> No pending claims to review. All claims have been processed!
                </div>
            }
        </div>
    </div>
</div>
