@model IEnumerable<ST10440112_PROG6212_CCMS.Models.Claim>

@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container mt-4">
    <h2 class="mb-4">Admin Dashboard</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title" style="font-weight: 600; color: #000;">Total Claims</h5>
                    <h2 class="mb-2" style="font-weight: bold; color: #13325B; font-size: 2.5rem;">@ViewBag.TotalClaims</h2>
                    <p class="mb-0 text-muted">All-Time Claims</p>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title" style="font-weight: 600; color: #000;">Pending Claims</h5>
                    <h2 class="mb-2" style="font-weight: bold; color: #ff8c00; font-size: 2.5rem;">@ViewBag.PendingClaims</h2>
                    <p class="mb-0 text-muted">Awaiting Review</p>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title" style="font-weight: 600; color: #000;">Approved Claims</h5>
                    <h2 class="mb-2" style="font-weight: bold; color: #9F7944; font-size: 2.5rem;">@ViewBag.ApprovedClaims</h2>
                    <p class="mb-0 text-muted">Completed</p>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title" style="font-weight: 600; color: #000;">Total Amount</h5>
                    <h2 class="mb-2" style="font-weight: bold; color: #28a745; font-size: 2.5rem;">R@(ViewBag.TotalAmount.ToString("N0"))</h2>
                    <p class="mb-0 text-muted">Approved Claims</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header" style="background-color: #13325B; color: white;">
                    <h5 class="mb-0">Quick Actions</h5>
                </div>
                <div class="card-body">
                    <a asp-action="CoordinatorReview" class="btn btn-primary me-2" style="background-color: #9F7944; border-color: #9F7944;">
                        <i class="bi bi-file-earmark-check"></i> Review & Approve Claims
                    </a>
                    <a asp-controller="Claims" asp-action="Index" class="btn btn-outline-primary">
                        <i class="bi bi-list-check"></i> View All Claims
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Claims Table -->
    <div class="card">
        <div class="card-header" style="background-color: #13325B; color: white;">
            <h5 class="mb-0">Recent Claims</h5>
        </div>
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Claim ID</th>
                                <th>Lecturer</th>
                                <th>Department</th>
                                <th>Status</th>
                                <th>Total Hours</th>
                                <th>Amount</th>
                                <th>Date Submitted</th>
                                <th>Documents</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var claim in Model)
                            {
                                <tr>
                                    <td>@claim.ClaimId.ToString().Substring(0, 8)...</td>
                                    <td>@claim.Lecturer?.Name</td>
                                    <td>@claim.Lecturer?.Department</td>
                                    <td>
                                        @if (claim.ClaimStatus == "Pending")
                                        {
                                            <span class="badge" style="background-color: #fff3cd; color: #856404;">@claim.ClaimStatus</span>
                                        }
                                        else if (claim.ClaimStatus == "Verified")
                                        {
                                            <span class="badge" style="background-color: #d1ecf1; color: #0c5460;">@claim.ClaimStatus</span>
                                        }
                                        else if (claim.ClaimStatus == "Approved")
                                        {
                                            <span class="badge" style="background-color: #d4edda; color: #155724;">@claim.ClaimStatus</span>
                                        }
                                        else if (claim.ClaimStatus == "Rejected")
                                        {
                                            <span class="badge" style="background-color: #f8d7da; color: #721c24;">@claim.ClaimStatus</span>
                                        }
                                        else
                                        {
                                            <span class="badge" style="background-color: #e2e3e5; color: #383d41;">@claim.ClaimStatus</span>
                                        }
                                    </td>
                                    <td>@claim.TotalHours hrs</td>
                                    <td>R @((claim.TotalHours * claim.HourlyRate).ToString("N2"))</td>
                                    <td>@claim.SubmissionDate.ToString("dd MMM yyyy")</td>
                                    <td>
                                        @if (claim.Documents != null && claim.Documents.Any())
                                        {
                                            <span class="badge bg-info">@claim.Documents.Count file(s)</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">No documents</span>
                                        }
                                    </td>
                                    <td>
                                        @if (claim.ClaimStatus == "Pending")
                                        {
                                            <a asp-action="ReviewClaim" asp-route-id="@claim.ClaimId" class="btn btn-sm" style="background-color: #9F7944; color: white; border-color: #9F7944;">
                                                <i class="bi bi-eye"></i> Review
                                            </a>
                                        }
                                        else
                                        {
                                            <a asp-controller="Claims" asp-action="Details" asp-route-id="@claim.ClaimId" class="btn btn-sm btn-link p-0" style="color: #9F7944; text-decoration: none;">
                                                <i class="bi bi-eye" style="font-size: 1.2rem;"></i>
                                            </a>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> No claims found.
                </div>
            }
        </div>
    </div>
</div>
