@model IEnumerable<ST10440112_PROG6212_CCMS.Models.Claim>

@{
    ViewData["Title"] = "Approve Claims - Academic Manager";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Approve Claims</h2>
        <a asp-action="Dashboard" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to Dashboard
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card">
        <div class="card-header" style="background-color: #13325B; color: white;">
            <h5 class="mb-0">Verified Claims Awaiting Final Approval</h5>
        </div>
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Claim ID</th>
                                <th>Lecturer</th>
                                <th>Documents</th>
                                <th>Coordinator Status</th>
                                <th>Manager Status</th>
                                <th>Total Hours</th>
                                <th>Amount</th>
                                <th>Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var claim in Model)
                            {
                                <tr>
                                    <td>
                                        <strong>@claim.ClaimId.ToString().Substring(0, 13)...</strong>
                                    </td>
                                    <td>
                                        <strong>@claim.Lecturer?.Name</strong><br />
                                        <small class="text-muted">@claim.Lecturer?.Department</small>
                                    </td>
                                    <td>
                                        @if (claim.Documents != null && claim.Documents.Any())
                                        {
                                            <span class="badge bg-info">@claim.Documents.Count file(s)</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">No documents</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge" style="background-color: #d1ecf1; color: #0c5460;">Verified</span>
                                    </td>
                                    <td>
                                        <span class="badge" style="background-color: #fff3cd; color: #856404;">Pending Approval</span>
                                    </td>
                                    <td>@claim.TotalHours hrs</td>
                                    <td><strong>R @((claim.TotalHours * claim.HourlyRate).ToString("N2"))</strong></td>
                                    <td>@claim.SubmissionDate.ToString("dd MMM yyyy")</td>
                                    <td>
                                        <a href="/Admin/Manager/ReviewDetails/@claim.ClaimId" class="btn btn-sm" style="background-color: #9F7944; color: white; border-color: #9F7944;">
                                            <i class="bi bi-eye"></i> Review Details
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-success">
                    <i class="bi bi-check-circle"></i> No verified claims awaiting approval. All claims have been processed!
                </div>
            }
        </div>
    </div>
</div>
