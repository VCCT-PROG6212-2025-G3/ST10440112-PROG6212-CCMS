@model IEnumerable<ST10440112_PROG6212_CCMS.Models.Claim>

@{
    ViewData["Title"] = "Track Claims";
    var currentPath = Context.Request.Path.ToString().ToLower();
    var isManager = currentPath.Contains("manager");
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Track Claims</h2>
    </div>

    <!-- Search and Filter -->
    <div class="card mb-3">
        <div class="card-body">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-search"></i></span>
                        <input type="text" class="form-control" id="searchInput" placeholder="Search by Claim ID, Lecturer, or Status...">
                    </div>
                </div>
                <div class="col-md-4 text-end">
                    <label class="me-2">Sort By:</label>
                    <button class="btn btn-sm btn-outline-secondary me-1">
                        <i class="bi bi-calendar"></i> Date
                    </button>
                    <button class="btn btn-sm btn-outline-secondary">
                        <i class="bi bi-check-square"></i> Status
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Claims Table -->
    <div class="card">
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover" id="claimsTable">
                        <thead style="background-color: #f8f9fa;">
                            <tr>
                                <th>ClaimID</th>
                                <th>Lecturer</th>
                                <th>Department</th>
                                <th>Documents</th>
                                <th>Review Status</th>
                                <th>Full Status</th>
                                <th>Total Hours</th>
                                <th>Amount</th>
                                <th>Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var claim in Model)
                            {
                                <tr>
                                    <td><strong>@claim.ClaimId.ToString().Substring(0, 13)...</strong></td>
                                    <td>@claim.Lecturer?.Name</td>
                                    <td>@claim.Lecturer?.Department</td>
                                    <td>
                                        @if (claim.Documents != null && claim.Documents.Any())
                                        {
                                            <div class="mb-1">
                                                @foreach (var doc in claim.Documents)
                                                {
                                                    <span class="badge bg-secondary me-1">@doc.DocType</span>
                                                }
                                            </div>
                                        }
                                        else
                                        {
                                            <span class="text-muted">No documents</span>
                                        }
                                    </td>
                                    <td>
                                        @if (claim.ClaimStatus == "Verified" || claim.ClaimStatus == "Approved")
                                        {
                                            <span class="badge" style="background-color: #d4edda; color: #155724;">Approved</span>
                                        }
                                        else if (claim.ClaimStatus == "Rejected")
                                        {
                                            <span class="badge" style="background-color: #f8d7da; color: #721c24;">Rejected</span>
                                        }
                                        else
                                        {
                                            <span class="badge" style="background-color: #fff3cd; color: #856404;">Pending</span>
                                        }
                                    </td>
                                    <td>
                                        @if (claim.ClaimStatus == "Pending")
                                        {
                                            <span class="badge" style="background-color: #fff3cd; color: #856404;">Pending</span>
                                        }
                                        else if (claim.ClaimStatus == "Verified")
                                        {
                                            <span class="badge" style="background-color: #d1ecf1; color: #0c5460;">Verified</span>
                                        }
                                        else if (claim.ClaimStatus == "Approved")
                                        {
                                            <span class="badge" style="background-color: #d4edda; color: #155724;">Approved</span>
                                        }
                                        else if (claim.ClaimStatus == "Rejected")
                                        {
                                            <span class="badge" style="background-color: #f8d7da; color: #721c24;">Rejected</span>
                                        }
                                        else
                                        {
                                            <span class="badge" style="background-color: #e2e3e5; color: #383d41;">@claim.ClaimStatus</span>
                                        }
                                    </td>
                                    <td>@claim.TotalHours</td>
                                    <td><span class="badge bg-info">R @(((decimal)claim.TotalHours * claim.HourlyRate).ToString("N2"))</span></td>
                                    <td>@claim.SubmissionDate.ToString("dd-MM-yyyy")</td>
                                    <td>
                                        <a asp-controller="Claims" asp-action="Details" asp-route-id="@claim.ClaimId" class="btn btn-sm btn-link p-0 me-2" style="color: #9F7944; text-decoration: none;" title="View Details">
                                            <i class="bi bi-eye" style="font-size: 1.2rem;"></i>
                                        </a>
                                        <button class="btn btn-sm btn-link p-0 me-2" style="color: #9F7944; text-decoration: none;" title="Comments">
                                            <i class="bi bi-chat" style="font-size: 1.2rem;"></i>
                                        </button>
                                        @if (claim.ClaimStatus == "Approved")
                                        {
                                            <button class="btn btn-sm btn-link p-0 me-2" style="color: #9F7944; text-decoration: none;" title="Download Report">
                                                <i class="bi bi-download" style="font-size: 1.2rem;"></i>
                                            </button>
                                        }
                                        @if (claim.ClaimStatus == "Verified" && isManager)
                                        {
                                            <button class="btn btn-sm btn-link p-0" style="color: #9F7944; text-decoration: none;" title="Withdraw Approval" onclick="alert('Feature coming soon')">
                                                <i class="bi bi-x-circle" style="font-size: 1.2rem;"></i>
                                            </button>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-inbox" style="font-size: 3rem; color: #6c757d;"></i>
                    <p class="text-muted mt-3">No claims found.</p>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Simple search functionality
        document.getElementById('searchInput').addEventListener('keyup', function() {
            var searchValue = this.value.toLowerCase();
            var table = document.getElementById('claimsTable');
            var rows = table.getElementsByTagName('tr');

            for (var i = 1; i < rows.length; i++) {
                var row = rows[i];
                var text = row.textContent.toLowerCase();
                row.style.display = text.includes(searchValue) ? '' : 'none';
            }
        });
    </script>
}
